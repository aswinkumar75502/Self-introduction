<!-- ========== Typing script & small behaviors ========== -->
<script>
  // --------------- typing effect (looping phrases) ---------------
  const phrases = [
    "Aspiring AI Engineer",
    "UI/UX Enthusiast",
    "Web & ML Projects",
    "Open to internships & collabs"
  ];
  const typeEl = document.getElementById('typed');
  const cursor = document.querySelector('.cursor');
  let pIndex = 0, charIndex = 0, typing = true;

  function typeLoop(){
    const current = phrases[pIndex];
    if(charIndex < current.length){
      typeEl.textContent += current.charAt(charIndex);
      charIndex++;
      setTimeout(typeLoop, 80);
    } else {
      // hold then delete
      setTimeout(() => {
        deleteLoop();
      }, 900);
    }
  }
  function deleteLoop(){
    const current = phrases[pIndex];
    if(charIndex > 0){
      typeEl.textContent = current.substring(0, charIndex-1);
      charIndex--;
      setTimeout(deleteLoop, 45);
    } else {
      pIndex = (pIndex + 1) % phrases.length;
      setTimeout(typeLoop, 250);
    }
  }
  // start typing
  setTimeout(typeLoop, 800);

  // --------------- set year ---------------
  document.getElementById('year').textContent = new Date().getFullYear();

  // --------------- accessibility focus for keyboard users ---------------
  document.addEventListener('keydown', (e) => {
    if(e.key === 'Tab') {
      document.body.classList.add('show-outline');
    }
  });
</script>

